{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "installCommand": "npm install --legacy-peer-deps && cd client && npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://[YOUR-ACTUAL-RENDER-URL]/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
